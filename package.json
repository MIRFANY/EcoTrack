{
    "name": "ecotrack",
    "version": "1.0.0",
    "description": "A student-focused sustainability app with carbon tracking and gamification",
    "main": "server/server.js",
    "scripts": {
        "start": "node server/server.js",
        "dev": "concurrently \"npm run server\" \"npm run client\"",
        "server": "nodemon server/server.js",
        "client": "cd client && npm start",
        "build": "cd client && npm run build",
        "install-all": "npm install && cd client && npm install"
    },
    "keywords": [
        "sustainability",
        "carbon-tracking",
        "gamification",
        "students"
    ],
    "author": "",
    "license": "MIT",
    "dependencies": {
        "express": "^4.18.2",
        "mongoose": "^7.5.0",
        "dotenv": "^16.3.1",
        "cors": "^2.8.5",
        "jsonwebtoken": "^9.0.2",
        "bcryptjs": "^2.4.3",
        "axios": "^1.5.0"
    },
    "devDependencies": {
        "nodemon": "^3.0.1",
        "concurrently": "^8.2.0"
    }
}